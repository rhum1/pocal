<h1>New appointment</h1>

<% form_for(@appointment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :appointment_kind %><br />
    <%= f.collection_select :appointment_kind, AppointmentKind.all, :id, :name %>
  </p>
  <p>
    <%= f.label :patient %><br />
	<%= f.collection_select :patient, Patient.all, :id, :fullname %>
  </p>
  <p>
    <%= f.label :patient %><br />
	<%= f.collection_select :doctor, Doctor.all, :id, :fullname %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.time_select :start_time %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', appointments_path %>